<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.NorikaeWidget.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.NorikaeWidget.AppWidgetContainer">

        <TextView
            android:id="@+id/appwidget_text_route"
            android:layout_width="71dp"
            android:layout_height="32dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            android:text="〇〇線" />

        <TextView
            android:id="@+id/appwidget_text_updown"
            android:layout_width="63dp"
            android:layout_height="25dp"
            android:layout_alignStart="@+id/appwidget_text_route"
            android:layout_marginStart="79dp"
            android:layout_marginTop="16dp"
            android:text="(上り)" />

        <TextView
            android:id="@+id/appwidget_text1"
            android:layout_width="38dp"
            android:layout_height="19dp"
            android:layout_alignTop="@+id/appwidget_text_departure"
            android:layout_marginStart="1dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/appwidget_text_departure"
            android:text="発" />

        <TextView
            android:id="@+id/appwidget_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/appwidget_text_route"
            android:layout_alignStart="@+id/appwidget_text_route"
            android:layout_marginStart="58dp"
            android:layout_marginTop="51dp"
            android:text="あと" />

        <TextView
            android:id="@+id/appwidget_text_departure"
            android:layout_width="76dp"
            android:layout_height="37dp"
            android:layout_below="@+id/appwidget_text_route"
            android:layout_alignStart="@+id/appwidget_text_route"
            android:layout_marginStart="130dp"
            android:layout_marginTop="-9dp"
            android:text="00:00"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/appwidget_text_rest"
            android:layout_width="134dp"
            android:layout_height="63dp"
            android:layout_below="@+id/appwidget_text_departure"
            android:layout_marginStart="9dp"
            android:layout_marginTop="11dp"
            android:layout_toEndOf="@+id/appwidget_text2"
            android:text="00:00"
            android:textSize="50dp" />
</RelativeLayout>
